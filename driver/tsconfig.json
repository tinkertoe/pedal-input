{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
      "outDir": "build",
      "target": "ES2015",
      "module": "commonjs",
      "strict": true,
      "strictNullChecks": false,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "removeComments": true,
      "resolveJsonModule": true
  }
}